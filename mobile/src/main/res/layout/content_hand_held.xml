<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mpsc.android.smartactivity.HandHeldActivity"
    tools:showIn="@layout/activity_hand_held"
    android:orientation="vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start Acc SmartPhone"
        android:id="@+id/startAcc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="StartPhoneService" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Acc Smartphone"
        android:id="@+id/stopAcc"
        android:layout_below="@+id/startAcc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="StopPhoneService" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/sensorData"
        android:layout_below="@+id/stopAcc"
        android:layout_marginTop="54dp"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start Acc Wear"
        android:id="@+id/startWear"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="StartWearAcc" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Stop Acc Wear"
        android:id="@+id/button"
        android:layout_below="@+id/startWear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="StopWearAcc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/wearData"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <!--<FrameLayout-->
        <!--android:name="mpsc.android.smartactivity.AccServiceOff"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/fragment_place">-->
    <!--</FrameLayout>-->
</RelativeLayout>
